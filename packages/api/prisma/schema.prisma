generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id           String         @id @default(cuid())
  comment      String
  postId       String
  userId       String
  createdAt    DateTime       @default(now())
  post         Post           @relation(fields: [postId], references: [id])
  author       User           @relation(fields: [userId], references: [id])
  Notification Notification[]
}

model Follow {
  id           String         @id @default(cuid())
  followerId   String
  userId       String
  createdAt    DateTime       @default(now())
  follower     User           @relation("UserFollowing", fields: [followerId], references: [id])
  user         User           @relation(fields: [userId], references: [id])
  Notification Notification[]
}

model Like {
  id           String         @id @default(cuid())
  postId       String
  userId       String
  createdAt    DateTime       @default(now())
  post         Post           @relation(fields: [postId], references: [id])
  user         User           @relation(fields: [userId], references: [id])
  Notification Notification[]
}

model Message {
  id        String   @id @default(cuid())
  senderId  String
  message   String
  seen      Boolean  @default(false)
  userId    String
  createdAt DateTime @default(now())
  sender    User     @relation("UserSendingMessage", fields: [senderId], references: [id])
  receiver  User     @relation(fields: [userId], references: [id])

  @@unique([senderId, userId], name: "uniqueMessage")
}

model Notification {
  id        String   @id @default(cuid())
  authorId  String
  seen      Boolean  @default(false)
  userId    String
  postId    String
  likeId    String
  followId  String
  commentId String
  createdAt DateTime @default(now())
  author    User     @relation("UserBeingSentNotification", fields: [authorId], references: [id])
  comment   Comment  @relation(fields: [commentId], references: [id])
  follow    Follow   @relation(fields: [followId], references: [id])
  like      Like     @relation(fields: [likeId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Post {
  id            String         @id @default(cuid())
  title         String
  image         String?
  imagePublicId String
  userId        String
  createdAt     DateTime       @default(now())
  author        User           @relation(fields: [userId], references: [id])
  comments      Comment[]
  likes         Like[]
  Notification  Notification[]
}

model User {
  id                       String         @id @default(cuid())
  fullName                 String
  email                    String         @unique
  username                 String         @unique
  passwordResetToken       String
  passwordResetTokenExpiry String
  password                 String
  image                    String
  imagePublicId            String
  coverImage               String
  coverImagePublicId       String
  isOnline                 Boolean        @default(false)
  userId                   String?
  createdAt                DateTime       @default(now())
  User                     User?          @relation("UserToUser", fields: [userId], references: [id])
  comments                 Comment[]
  following                Follow[]       @relation("UserFollowing")
  followers                Follow[]
  likes                    Like[]
  Message                  Message[]      @relation("UserSendingMessage")
  messages                 Message[]
  Notification             Notification[] @relation("UserBeingSentNotification")
  notifications            Notification[]
  posts                    Post[]
  UserMessages             User[]         @relation("UserToUser")
}
